<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VietFlight Inventory"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/vietjet_red"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setup dữ liệu test"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_init_data"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="TẠO DỮ LIỆU TEST"
        android:backgroundTint="@color/vietjet_red"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_to_login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ĐI ĐẾN ĐĂNG NHẬP"
        android:backgroundTint="@color/blue_info" />

</LinearLayout>